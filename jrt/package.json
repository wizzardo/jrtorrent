{
  "private": true,
  "name": "jrt",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build-css": "sass --no-source-map src:src",
    "watch-css": "npm run build-css && sass --no-source-map --watch src:src",
    "prebuild": "rm -rf build && npm run build-css",
    "build-rollup": "rollup -c rollup.config.js",
    "build2": "preact build",
    "build": "npm-run-all -s prebuild build-rollup copy-build",
    "serve": "sirv build --port 8080 --cors --single",
    "start-js": "preact watch",
    "start": "npm-run-all -p watch-css start-js",
    "lint": "eslint src",
    "test": "jest",
    "copy-build": "rm -rf ../src/main/resources/public/static && cp -r build/* ../src/main/resources/public/"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "laco": "^1.2.1",
    "preact": "^10.22.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-ui-basics": "0.0.113",
    "typedfastbitset": "^0.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/plugin-external-helpers": "^7.24.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/plugin-proposal-do-expressions": "^7.24.7",
    "@babel/plugin-proposal-export-default-from": "^7.24.7",
    "@babel/plugin-proposal-function-bind": "^7.24.7",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.20.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.24.7",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-react": "^7.24.7",
    "babel-plugin-jsx-pragmatic": "1.0.2",
    "babel-plugin-module-resolver": "5.0.2",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "eslint": "^9.7.0",
    "eslint-config-preact": "^1.4.0",
    "npm-run-all": "4.1.5",
    "preact-cli": "^3.5.1",
    "rollup": "4.18.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.77.8",
    "sirv-cli": "2.0.2"
  }
}
