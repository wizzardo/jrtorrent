{
  "private": true,
  "name": "jrt",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build-css": "sass --no-source-map src:src",
    "watch-css": "npm run build-css && sass --no-source-map --watch src:src",
    "prebuild": "rm -rf build && npm run build-css",
    "build-rollup": "rollup -c rollup.config.js",
    "build2": "preact build",
    "build": "npm-run-all -s prebuild build-rollup copy-build",
    "serve": "sirv build --port 8080 --cors --single",
    "start-js": "preact watch",
    "start": "npm-run-all -p watch-css start-js",
    "lint": "eslint src",
    "test": "jest",
    "copy-build": "rm -rf ../src/main/resources/public/static && cp -r build/* ../src/main/resources/public/"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "laco": "^1.2.1",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.19",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-ui-basics": "0.0.113",
    "typedfastbitset": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-external-helpers": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.15.4",
    "@babel/plugin-proposal-do-expressions": "^7.14.5",
    "@babel/plugin-proposal-export-default-from": "^7.14.5",
    "@babel/plugin-proposal-function-bind": "^7.14.5",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.14.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/plugin-proposal-pipeline-operator": "^7.15.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "autoprefixer": "^9.8.6",
    "babel-plugin-jsx-pragmatic": "1.0.2",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.4",
    "fs-extra": "^10.0.0",
    "jest": "^27.1.1",
    "jest-preset-preact": "^4.0.5",
    "npm-run-all": "4.1.5",
    "postcss": "^8.3.6",
    "preact-cli": "^3.5.1",
    "rollup": "4.9.5",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.39.0",
    "sirv-cli": "1.0.14"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
